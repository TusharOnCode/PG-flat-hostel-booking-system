      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 500;
      transition: color 0.3s ease, transform 0.3s ease;
    }

    nav a:hover {
      color: var(--accent);
      transform: scale(1.05);
    }

    nav a .icon {
      opacity: 0;
      transform: translateX(-5px);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    nav a:hover .icon {
